<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>tamacat2</artifactId>
    <groupId>cloud.tamacat2</groupId>
    <version>2.0-SNAPSHOT</version>
  </parent>
  <artifactId>tamacat2-helidon</artifactId>
  <packaging>jar</packaging>
  <name>tamacat2-helidon</name>
  <url>https://tamacat.cloud/</url>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <properties>
    <helidon-microprofile.version>3.2.7</helidon-microprofile.version>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>cloud.tamacat2</groupId>
      <artifactId>tamacat2-reverse</artifactId>
      <version>${project.version}</version>
    </dependency>
    
    <dependency>
      <groupId>io.helidon.microprofile.server</groupId>
      <artifactId>helidon-microprofile-server</artifactId>
      <version>${helidon-microprofile.version}</version>
    </dependency>
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <archive>
            <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
            <manifestEntries>
              <Automatic-Module-Name>cloud.tamacat2.helidon</Automatic-Module-Name>
              <Specification-Title>${project.name}</Specification-Title>
              <Specification-Version>${project.version}</Specification-Version>
              <Specification-Vendor>tamacat.cloud</Specification-Vendor>
              <Implementation-Title>${project.name}</Implementation-Title>
              <Implementation-Version>${project.version}</Implementation-Version>
              <Implementation-Vendor>tamacat.cloud</Implementation-Vendor>
              <Implementation-Vendor-Id>cloud.tamacat</Implementation-Vendor-Id>
              <Built-By>tamacat.org</Built-By>
              <Built-Time>${maven.build.timestamp}</Built-Time>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.5.0</version>
        <configuration>
          <finalName>tamacat2-httpd-${project.version}</finalName>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
          <archive>
            <manifest>
              <mainClass>cloud.tamacat2.httpd.WevServer</mainClass>
            </manifest>
          </archive>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.google.cloud.tools</groupId>
        <artifactId>jib-maven-plugin</artifactId>
        <version>3.3.1</version>
        <configuration>
          <from>
            <image>gcr.io/distroless/java17</image>
          </from>
          <to>
            <image>tamacat/tamacat2-httpd</image>
            <tags>
              <tag>2.0-${jib.build.tag}</tag>
              <tag>2.0-latest</tag>
            </tags>
          </to>
          <container>
            <jvmFlags>
              <jvmFlag>-Dserver.home=/usr/local/tamacat2</jvmFlag>
            </jvmFlags>
            <mainClass>cloud.tamacat2.httpd.WebServer</mainClass>
            <appRoot>/usr/local/tamacat2</appRoot>
            <!--
            <args>
              <arg>service.json</arg>
            </args>
            -->
            <extraClasspath>/usr/local/tamacat2/conf</extraClasspath>
            <workingDirectory>/usr/local/tamacat2</workingDirectory>
            <creationTime>USE_CURRENT_TIMESTAMP</creationTime>
            <ports>
              <port>80</port>
            </ports>
            <format>OCI</format>
          </container>
          <extraDirectories>
            <paths>
              <path>
                <from>src/main/jib/conf</from>
                <into>/usr/local/tamacat2/conf</into>
              </path>
              <path>
                <from>src/main/jib/htdocs</from>
                <into>/usr/local/tamacat2/htdocs</into>
              </path>
            </paths>
          </extraDirectories>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
